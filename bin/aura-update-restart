#!/bin/bash

if [ "$(uname -r | sed 's/-arch/\.arch/')" != "$(pacman -Q linux | awk '{print $2}')" ]; then
  gum confirm "Linux kernel has been updated. Reboot?" && aura-state clear re*-required && sudo reboot now

elif [ -f "$HOME/.local/state/aura/reboot-required" ]; then
  gum confirm "Updates require reboot. Ready?" && aura-state clear re*-required && sudo reboot now
fi

for file in "$HOME"/.local/state/aura/restart-*-required; do
  if [ -f "$file" ]; then
    filename=$(basename "$file")
    service=$(echo "$filename" | sed 's/restart-\(.*\)-required/\1/')
    echo "Restarting $service"
    aura-state clear "$filename"
    aura-restart-"$service"
  fi
done
