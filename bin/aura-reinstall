#!/bin/bash

set -e

if [ "$EUID" -eq 0 ]; then
  echo "Error: This script should not be run as root"
  exit 1
fi

echo -e "This will reinstall all the default Aura packages and reset all default configs.\nWarning: All changes to configs will be lost.\n"

if gum confirm "Are you sure you want to reinstall and lose all config changes?"; then
  echo "Resetting Aura repository"
  git clone "https://github.com/CjLogic/aura.git" ~/.local/share/aura-new >/dev/null
  rm -rf $AURA_PATH
  mv ~/.local/share/aura-new $AURA_PATH

  echo "Reinstalling missing Aura packages"
  mapfile -t packages < <(grep -v '^#' "$AURA_PATH/install/aura-base.packages" | grep -v '^$')
  sudo pacman -Syu --noconfirm --needed "${packages[@]}"

  echo "Resetting all Aura configs"
  cp -R ~/.local/share/aura/default/* ~/.config/
  cp ~/.local/share/aura/default/bashrc ~/.bashrc
  echo '[[ -f ~/.bashrc ]] && . ~/.bashrc' | tee ~/.bash_profile >/dev/null

  $(bash $AURA_PATH/install/config/theme.sh)
  $(bash $AURA_PATH/install/config/git.sh)

  aura-refresh-limine
  aura-refresh-plymouth
fi
