#!/bin/bash

set -e

trap 'echo ""; echo -e "\033[0;31mSomething went wrong during the update!\n\nPlease review the output above carefully, correct the error, and retry the update.\n\nIf you need assistance, get help from the community at https://aura.org/discord\033[0m"' ERR

if [[ $1 == "-y" ]] || aura-update-confirm; then
  aura-update-without-idle
  aura-snapshot create || [ $? -eq 127 ]
  aura-update-git
  aura-update-perform
fi
