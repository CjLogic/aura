#!/bin/bash

if (($# == 0)); then
  echo "Usage: aura-channel-set [stable|edge|dev]"
  exit 1
else
  channel="$1"
fi

case "$channel" in
"stable") aura-branch-set "master" && aura-refresh-pacman "stable" ;;
"edge") aura-branch-set "master" && aura-refresh-pacman "edge" ;;
"dev") aura-branch-set "dev" && aura-refresh-pacman "edge" ;;
*) echo "Unknown channel: $channel"; exit 1; ;;
esac

aura-update -y
