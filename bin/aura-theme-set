#!/bin/bash

if [[ -z $1 && $1 != "CNCLD" ]]; then
  echo "Usage: aura-theme-set <theme-name>"
  exit 1
fi

THEMES_DIR="$HOME/.config/aura/themes/"
CURRENT_THEME_DIR="$HOME/.config/aura/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR"
  exit 1
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

# Change background with theme
aura-theme-bg-next

# Restart components to apply new theme
if pgrep -x waybar >/dev/null; then
  aura-restart-waybar
fi
aura-restart-swayosd
aura-restart-terminal
hyprctl reload
pkill -SIGUSR2 btop
makoctl reload

# Change gnome, browser, vscode, cursor themes
aura-theme-set-gnome
aura-theme-set-browser
aura-theme-set-vscode
aura-theme-set-cursor
aura-theme-set-obsidian

# Call hook on theme set
aura-hook theme-set "$THEME_NAME"
